    "# Using Decimal to avoid floating point precision problems\n",
    "from decimal import Decimal\n",
    "\n",
    "x = Decimal(str(2.0))\n",
    "y = Decimal(str(3.0))\n",
    "exp = Decimal(str(3.0))\n",
    "\n",
    "pow(x/y, exp) == pow(x, exp) / pow(y, exp)"
   ]
