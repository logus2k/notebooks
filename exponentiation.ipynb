    "x = Decimal(str(3.0))\n",
    "exp1 = Decimal(str(2.0))\n",
    "exp2 = Decimal(str(6.0))\n",
    "exp3 = Decimal(str(-4.0))\n",
    "\n",
    "pow(x, exp1) / pow(x, exp2) == pow(x, exp3) == Decimal(\"0.01234567901234567901234567901\")"
   ]
